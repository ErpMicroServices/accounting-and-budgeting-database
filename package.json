{
  "name": "accounting-and-budgeting-database",
  "version": "0.0.0",
  "description": "Data for the domain",
  "author": {
    "name": "Jim Barrows",
    "email": "Jim.Barrows@gmail.copm"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:database; npm run build:docker",
    "build:docker": "docker build --tag erpmicroservices/accounting-and-budgeting-database --rm .",
    "build:database": "mkdir -p build;liquibase-3.5.3-bin/liquibase --changeLogFile=./database_change_log.yml --url='offline:postgresql' updateSql > build/database_up.sql",
    "clean": "rm -rf build; rm -rf generated-sql;yes | docker rmi erpmicroservices/accounting-and-budgeting-database; yes | docker volume prune; docker rm accounting-and-budgeting-database",
    "update_database": "liquibase-3.5.3-bin/liquibase --changeLogFile=./database_change_log.yml --url='jdbc:postgresql://localhost/invoice' --username=invoice --password=invoice update",
    "push": "docker push erpmicroservices/accounting-and-budgeting-database:latest",
    "start": "docker run --publish 5432:5432 --name accounting-and-budgeting-database erpmicroservices/accounting-and-budgeting-database",
    "test": "cucumber-js --tags @accounting_database  --require-module @babel/register --require-module @babel/polyfill  -r ./features ../invoice-features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErpMicroServices/accounting-and-budgeting-database.git"
  },
  "bugs": {
    "url": "https://github.com/ErpMicroServices/accounting-and-budgeting-database/issues"
  },
  "homepage": "https://github.com/ErpMicroServices/accounting-and-budgeting-database#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "braces": ">=2.3.1",
    "chai": "^4.2.0",
    "cucumber": "^7.0.0-rc.0",
    "pg-promise": "^10.7.0"
  }
}
